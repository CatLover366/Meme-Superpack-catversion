<Defs>

	<!-- Shittles liver -->

	<HediffDef ParentName="AddedBodyPartBase">
		<defName>ShittleLiver</defName>
		<label>Shittle's Liver</label>
		<labelNoun>Shittle's Liver</labelNoun>
		<description>This is the liver of the goblin 'Shittle D'irt', a celestial doomed to an Imperial Hellplanet for crimes against the Empire. As a celestial, Shittle's organs were capable of regrowing, and so he donated a liver to create the ultimate being; Tzu Zan.</description>
		<descriptionHyperlinks>
			<ThingDef>ShittleLiver</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>ShittleLiver</spawnThingOnRemoved>
		<stages>
			<li>
				<statOffsets>
					<ToxicEnvironmentResistance>0.7</ToxicEnvironmentResistance>
					<ImmunityGainSpeed>0.25</ImmunityGainSpeed>
					<InjuryHealingFactor>0.5</InjuryHealingFactor>
				</statOffsets>
			</li>
		</stages>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>2.25</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<ThingDef ParentName="BodyPartBionicBase">
		<defName>ShittleLiver</defName>
		<label>shittle's liver</label>
		<description>This is the liver of the goblin 'Shittle D'irt', a celestial doomed to an Imperial Hellplanet for crimes against the Empire. As a celestial, Shittle's organs were capable of regrowing, and so he donated a liver to create the ultimate being; Tzu Zan.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallShittleLiver</RecipeDef>
		</descriptionHyperlinks>
		<costList>
			<Plasteel>15</Plasteel>
			<ComponentSpacer>4</ComponentSpacer>
		</costList>
		<statBases>
			<Mass>2</Mass>
		</statBases>
	</ThingDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>InstallShittleLiver</defName>
		<label>install shittle liver</label>
		<description>Install a shittle liver.</description>
		<descriptionHyperlinks>
			<ThingDef>ShittleLiver</ThingDef>
			<HediffDef>ShittleLiver</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing shittle liver.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ShittleLiver</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ShittleLiver</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Liver</li>
		</appliedOnFixedBodyParts>
		<addsHediff>ShittleLiver</addsHediff>
	</RecipeDef>

