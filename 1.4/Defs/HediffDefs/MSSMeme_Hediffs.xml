<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<HediffDef>
		<defName>MSSMeme_Awake</defName>
		<label>awake</label>
		<description>I'm Awake, what an awful state of existance.</description>
		<hediffClass>MSS.MemeSuperpack.Hediff.Hediff_WakeTime</hediffClass>
		<minSeverity>0</minSeverity>
		<maxSeverity>18</maxSeverity>
		<makesSickThought>false</makesSickThought>
		<everCurableByItem>false</everCurableByItem>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<tendable>false</tendable>
		<makesAlert>false</makesAlert>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeath" />
		</comps>
		<stages>
			<li>
				<becomeVisible>true</becomeVisible>
				<minSeverity>0</minSeverity>
				<label>had my beauty sleep</label>
				<socialFightChanceFactor>0.9</socialFightChanceFactor>
				<statOffsets>
					<PawnBeauty>0.3</PawnBeauty>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<becomeVisible>true</becomeVisible>
				<minSeverity>12</minSeverity>
				<label>getting sleepy</label>
				<socialFightChanceFactor>1.2</socialFightChanceFactor>
				<statOffsets>
					<RestFallRateFactor>1.1</RestFallRateFactor>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<becomeVisible>true</becomeVisible>
				<minSeverity>18</minSeverity>
				<label>dead tired</label>
				<socialFightChanceFactor>2.5</socialFightChanceFactor>
				<statOffsets>
					<RestFallRateFactor>1.8</RestFallRateFactor>
					<PawnBeauty>-0.8</PawnBeauty>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="WorkRoleAuraBuffHediffBase">
		<defName>MSSMeme_ILikeBuildBase</defName>
		<label>I like build base</label>
		<labelNoun>a desire to build base good</labelNoun>
		<description>A low thrumming need, deep in the monke brain demanding that we build base now reducing the need for food and sleep while build base yes.</description>
		<defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
		<tendable>false</tendable>
		<makesAlert>false</makesAlert>
		<makesSickThought>false</makesSickThought>
		<extraTooltip>I like build base</extraTooltip>
		<blocksSocialInteraction>true</blocksSocialInteraction>
		<blocksSleeping>true</blocksSleeping>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
				<hungerRateFactorOffset>-0.20</hungerRateFactorOffset>
				<statOffsets>
					<ConstructionSpeed>0.3</ConstructionSpeed>
					<MiningSpeed>0.3</MiningSpeed>
					<DeepDrillingSpeed>0.3</DeepDrillingSpeed>
					<MiningYield>0.2</MiningYield>
					<SmoothingSpeed>0.5</SmoothingSpeed>
					<ConstructSuccessChance>0.5</ConstructSuccessChance>
					<GlobalLearningFactor>-0.2</GlobalLearningFactor>
					<RestFallRateFactor>-0.5</RestFallRateFactor>
				</statOffsets>
				<!-- MiningCommandBuff -->
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="RoleStatBuff">
		<defName>MSSMeme_ILikeBuildBaseSource</defName>
		<label>I like build base</label>
		<description>I like build base... you build base now.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
		<tendable>false</tendable>
		<makesSickThought>false</makesSickThought>
		<extraTooltip>I like build base</extraTooltip>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeath" />
			<li Class="HediffCompProperties_GiveHediffsInRange">
				<range>9.9</range>
				<mote>Mote_WorkCommand</mote>
				<hideMoteWhenNotDrafted>true</hideMoteWhenNotDrafted>
				<targetingParameters>
					<canTargetBuildings>false</canTargetBuildings>
					<canTargetAnimals>false</canTargetAnimals>
					<canTargetMechs>false</canTargetMechs>
					<onlyTargetColonists>true</onlyTargetColonists>
				</targetingParameters>
				<hediff>MSSMeme_ILikeBuildBase</hediff>
			</li>
		</comps>
	</HediffDef>
</Defs>
