<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Normal</success>
    <operations>
    <!-- "HumanFactionBase" is no longer a thing since 1.3, thusly factions are added by bunch, not simply all human, and then exclude undesired. This is chosen in versions of the mod for 1.3 and after. -->
      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name = "OutlanderFactionBase"]/caravanTraderKinds</xpath>
        <value>
          <li>MSSMeme_Caravan_Outlander_CoalOne</li>
          <li>MSSMeme_Caravan_Outlander_CoalTwo</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name = "TribeBase"]/caravanTraderKinds</xpath>
        <value>
          <li>MSSMeme_Caravan_Neolithic_CoalOne</li>
          <li>MSSMeme_Caravan_Neolithic_CoalTwo</li>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>